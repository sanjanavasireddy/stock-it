# Stock-IT — Environment Variables
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ── PostgreSQL / TimescaleDB ──────────────────────────────────────────────────
POSTGRES_PASSWORD=trader_secret

# ── Grafana ───────────────────────────────────────────────────────────────────
GRAFANA_PASSWORD=admin123

# ── Trade producer ────────────────────────────────────────────────────────────
# Simulated trades per second across all 10 symbols
TRADES_PER_SECOND=50

# ── Alerts (optional) ─────────────────────────────────────────────────────────
# POST target for CRITICAL/HIGH alerts (Slack, PagerDuty, etc.)
# Leave blank to disable webhook routing
ALERT_WEBHOOK_URL=
